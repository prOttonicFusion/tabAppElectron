{
  "name": "tabapp",
  "version": "1.0.1",
  "description": "A simple bar tab desktop app",
  "scripts": {
    "lint": "eslint -c .eslintrc --ext .js,.ts .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/prOttonicFusion/tabAppElectron",
  "keywords": [
    "Electron",
    "pub-tab"
  ],
  "author": {
    "name": "Otto Lindblom (prOttonicFusion)",
    "email": "otto.lindblom@gmail.com"
  },
  "license": "GPL-2.0",
  "build": {
    "appId": "com.tabapp.app",
    "linux": {
      "category": "Utility",
      "icon": "./build/icons/linux",
      "target": [
        "deb",
        "snap",
        "appImage"
      ]
    },
    "mac": {
      "icon": "build/icons/mac/icon.icns"
    },
    "win": {
      "icon": "build/icons/Icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prottonic": "^1.4.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "sqlite3": "^5.1.7"
  }
}
